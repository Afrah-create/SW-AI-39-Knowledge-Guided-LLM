{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/recommend",
      "dest": "app/main.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/download_pdf",
      "dest": "app/main.py",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "functions": {
    "app/main.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}

